<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @recipe do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name, t(".name"), class: "field-label" %>
      <%= f.text_field :name, class: "form-control field-input" %>

      <%= f.label :description, t(".description"), class: "field-label" %>
      <%= f.text_area :description, class: "form-control field-input" %>

      <%= f.label :purpose, t(".purpose"), class: "field-label" %>
      <%= f.text_area :purpose, class: "form-control field-input" %>

      <%= f.label :ready_in, t(".ready_in"), class: "field-label" %>
      <%= f.text_field :ready_in, class: "form-control field-input" %>

      <%= f.label :difficult_level, t(".difficult_level"), class: "field-label" %>
      <%= f.text_field :difficult_level, class: "form-control field-input" %>

      <%= f.label :people_num, t(".people_num"), class: "field-label" %>
      <%= f.text_field :people_num, class: "form-control field-input" %>

      <h3><%= t ".ingredients" %></h3>
      <%= f.fields_for :recipe_ingredients do |ff| %>
        <div>
          <%= ff.label :temp, t(".ingredient"), class: "field-label" %>
          <%= ff.text_field :temp, class: "form-control field-input" %>
        </div>
      <% end %>

      <button type="button" class="btn btn-danger "><%= t ".add_ingredient" %></button>

      <h3><%= t ".steps" %></h3>
      <%= f.fields_for :steps do |fff| %>
        <p>
          <%= fff.label :content, t(".steps") %>
          <%= fff.text_area :content, class: "form-control field-input" %>
        </p>
      <% end %>

        <button type="button" class="btn btn-danger" id="add-step">
          Add step
        </button>

      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit t(".submit"), class: "btn btn-primary submit-button" %>
    <% end %>
  </div>
</div>
